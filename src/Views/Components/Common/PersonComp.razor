<MudItem xs="12" sm="@SmValue" lg="@LgValue">
    <MudSelect T="DocumentType"
               Label="Tipo Documento"
               AnchorOrigin="Origin.BottomCenter"
               @bind-Value="Person.DocumentType"
               For="@(() => Person.DocumentType)">
        @foreach (DocumentType documentType in Enum.GetValues(typeof(DocumentType)))
        {
            <MudSelectItem T="DocumentType" Value="@documentType">@documentType.GetEnumDescription()</MudSelectItem>
        }
    </MudSelect>
</MudItem>
